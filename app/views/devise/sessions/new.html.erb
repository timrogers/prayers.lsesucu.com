<% content_for(:title) { "Log in" } %>

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "pure-form pure-form-aligned" }) do |f| %>

  <div class="pure-control-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="pure-control-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="pure-controls">
    <% if devise_mapping.rememberable? -%>
      <div class="pure-control-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "pure-checkbox" %>
      </div>
    <% end -%>

    <%= f.submit "Log in", class: "pure-button pure-button-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
